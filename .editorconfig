root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# 4 space indentation
[*.{ini,py,py.tpl,rst}]
indent_style = space
indent_size = 4

# 4-width tabbed indentation
[*.{sh,bat.tpl,Makefile.tpl}]
indent_style = tab
indent_size = 4

[*.md]
trim_trailing_whitespace = false
